#!/usr/bin/env python

import yt.wrapper.cypress_fuse as cypress_fuse
from yt.packages.fuse import FUSE

from argparse import ArgumentParser

import sys

def mount_cypress(proxy, mount_point, caching_period):
    """Mount a Cypress."""
    yt_client = cypress_fuse.CachedYtClient(proxy=proxy, max_age_seconds=caching_period)
    cypress = cypress_fuse.Cypress(yt_client)
    FUSE(
        cypress, mount_point,
        raw_fi=True, nothreads=True, foreground=True
    )

    cypress_fuse.CachedYtClient._statistics.report()
    cypress_fuse.Cypress._statistics.report()


if __name__ == "__main__":
    parser = ArgumentParser(description="Mount a Cypress, an YT cluster metainformation tree")

    parser.add_argument("proxy", help='Proxy alias like "aristotle.yt.yandex.net" or just "aristotle".')
    parser.add_argument("mount_point", help='Mountpoint directory like "/mnt/aristotle".')
    parser.add_argument(
        "--caching-period",
        action="store",
        type=int,
        default=2,
        help="Cache expiration time.")

    args = parser.parse_args()

    mount_cypress(args.proxy, args.mount_point, args.caching_period)
