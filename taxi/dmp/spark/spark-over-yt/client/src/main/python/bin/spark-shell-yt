#!/usr/bin/env python

import os

from yt_spark_client import shell
from yt_spark_client import utils as spark_utils


def main():
    args, unknown_args = spark_utils.parse_args(parser_arguments=dict(description="Spark Shell"))
    shell(spark_id=args.id,
          discovery_dir=args.discovery_dir,
          log_dir=args.log_dir,
          yt_proxy=args.proxy,
          yt_user=args.yt_user,
          yt_token=spark_utils.default_token(),
          spark_home=os.getenv("SPARK_HOME"),
          spark_args=unknown_args)


if __name__ == '__main__':
    main()
