#include <yt/build/build.h>

#include <yt/core/ya_version/ya_version.h>

#include <util/system/compiler.h>

#include <util/generic/strbuf.h>

namespace NYT {

////////////////////////////////////////////////////////////////////////////////

int GetVersionMajor()
{
    return @YT_VERSION_MAJOR@;
}

int GetVersionMinor()
{
    return @YT_VERSION_MINOR@;
}

int GetVersionPatch()
{
    return @YT_VERSION_PATCH@;
}


#if defined(YT_IN_ARCADIA)

const char* GetVersion()
{
    static TString version = CreateYtVersion(@YT_VERSION_MAJOR@, @YT_VERSION_MINOR@, @YT_VERSION_PATCH@, AsStringBuf("local"));
    return version.c_str();
}

#else

const char* GetVersion()
{
    return "@YT_VERSION@";
}

#endif

const char* GetBuildHost()
{
    return "@YT_BUILD_HOST@";
}

const char* GetBuildMachine()
{
    return "@YT_BUILD_MACHINE@";
}

const char* GetBuildTime()
{
    return "@YT_BUILD_TIME@";
}

////////////////////////////////////////////////////////////////////////////////

} // namespace NYT

