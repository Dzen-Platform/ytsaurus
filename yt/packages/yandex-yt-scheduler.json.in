{
    "meta": {
        "name": "yandex-yt-scheduler",
        "maintainer": "YT Team <yt@yandex-team.ru>",
        "description": "YT. This package provides server-side software",
        "version": "{revision}.{branch}",
        "pre-depends": [],
        "depends": ["libc6 (>= 2.15)"],
        "conflicts": ["yandex-yt"],
        "homepage": "https://wiki.yandex-team.ru/yt/"
    },
    "build": {
        "targets": [
            "yt/server/scheduler/bin"
        ],
        "flags": [
            {
                "name": "YT_VERSION_PATCH",
                "value": "@YT_VERSION_PATCH@"
            },
            {
                "name": "YT_VERSION_BRANCH",
                "value": "@YT_VERSION_BRANCH"
            }
        ]
    },
    "data": [
        {
            "source": {
                "type": "BUILD_OUTPUT",
                "path": "yt/server/scheduler/bin/ytserver-scheduler"
            },
            "destination": {
                "path": "/usr/bin/ytserver-scheduler"
            }
        }
    ]
}

